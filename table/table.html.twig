{# ...existing code... #}

  {% if rows %}
    <tbody>
    {% for row in rows %}
      {% set row_classes = [
        not no_striping ? cycle(['odd', 'even'], loop.index0),
      ] %}
    <tr{{ row.attributes.addClass(row_classes) }}>
      {% for cell in row.cells %}
        <{{ cell.tag }}{{ cell.attributes }}>
          <div data-template="newItemForm" id="newItemFormTemplate">
            {{- cell.content -}}
          </div>

          <div data-template="savedItem" id="savedItemTemplate">
            <div class="saved-item">
              <span class="saved-item-label">{{ 'Name:'|t }}</span>
              <span>{{ name }}</span>
            </div>

            <div class="saved-item">
              <span class="saved-item-label">{{ 'Number:'|t }}</span>
              <span>{{ number }}</span>
            </div>

            <div class="saved-item">
              <span class="saved-item-label">{{ 'Address:'|t }}</span>
              <span>{{ address }}</span>
            </div>

            <div class="saved-item">
              <span class="saved-item-label">{{ 'Approved:'|t }}</span>
              <span>{{ checkbox ? '✓'|t : '✗'|t }}</span>
            </div>

            <div class="actions">
              <button class="edit-btn" data-action="edit" data-id="{{ id }}">{{ 'Edit'|t }}</button>
              <button class="delete-btn" data-action="delete" data-id="{{ id }}">{{ 'Delete'|t }}</button>
            </div>
          </div>

          <div data-template="editItemForm" id="editItemFormTemplate">
            <div class="form-group">
              <label for="edit-name-{{ id }}">{{ 'Name:'|t }}</label>
              <input type="text" id="edit-name-{{ id }}" value="{{ name }}">
            </div>

            <div class="form-group">
              <label for="edit-number-{{ id }}">{{ 'Number:'|t }}</label>
              <input type="number" id="edit-number-{{ id }}" value="{{ number }}">
            </div>

            <div class="form-group">
              <label for="edit-address-{{ id }}">{{ 'Address:'|t }}</label>
              <input type="text" id="edit-address-{{ id }}" value="{{ address }}">
            </div>

            <div class="form-group">
              <label>
                <input type="checkbox" id="edit-checkbox-{{ id }}" {{ checked ? 'checked' : '' }}> {{ 'Approved'|t }}
              </label>
            </div>

            <div class="actions">
              <button class="save-btn" data-action="update" data-id="{{ id }}">{{ 'Update'|t }}</button>
            </div>
          </div>
        </{{ cell.tag }}>
      {% endfor %}
      </tr>
    {% endfor %}
    </tbody>
  {% elseif empty %}
    {# ...existing code... #}